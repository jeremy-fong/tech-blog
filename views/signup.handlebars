<div id="logCard" class="card">
  <div class="text-center card-title">
    <h2>Sign Up</h2>
  </div>
  <form class="form signup-form">
  <div class="form-group">
    <label for="username-signup">Username:</label>
    <input size="30" class="form-input" type="text" id="username-signup" />
  </div>
  <div class="form-group">
    <label for="password-signup">Password:</label>
    <input size="15" class="form-input" type="password" id="password-signup" />
  </div>
  <div class="form-group">
    <button id="logFormBtn" class="btn btn-primary" type="submit">Sign Up</button>
    <a id="link" href="/login">Log In instead</a>
  </div>
</form>
</div>

<script src="/js/signup.js"></script>