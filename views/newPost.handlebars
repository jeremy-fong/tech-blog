<div id="postCard" class="post card">
  <div id="postHeader" class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="newPost-form" class="card-body">
    <label class="form-label" for="postTitle">Title</label>
    <input type="text" name="postTitle" id="postTitle" class="form-input" />

    <label class="form-label" for="postContent">Content</label>
    <textarea name="postContent" id="postContent" class="form-input"></textarea>

    <button id="btn" type="submit" class="btn btn-primary">Create</button>
  </form>
</div>

<script src="/js/newPost.js"></script>